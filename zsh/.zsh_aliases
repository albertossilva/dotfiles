# PS
alias psa="ps aux"
alias psg="ps aux | grep "
alias psnode="ps aux | grep node"

# Show human friendly numbers and colors
alias df='df -h'
alias du='du -h -d 2'

# zsh profile editing
alias zr='source ~/.zshrc'
alias ze='nvim ~/.zshrc'

# Git Aliases
alias gs='git status'

# Common shell functions
alias tf='tail -f'
alias l='less'
alias ls='ls -G'
alias lh='ls -alt | head' # see the last modified files
alias la='ls -la'

# show me files matching "ls grep"
alias lsg='ll | grep'

# Zippin
alias gz='tar -zcvf'

alias ka9='killall -9'
alias k9='kill -9'

